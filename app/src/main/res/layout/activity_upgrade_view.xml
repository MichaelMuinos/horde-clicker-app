<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.justplaingoatapps.clicker.item_view">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:src="@drawable/number1"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        android:longClickable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Upgrade Name"
        android:id="@+id/upgradeName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cost Of Upgrade"
        android:id="@+id/upgradeCost"
        android:textSize="15dp"
        android:layout_alignBottom="@+id/clickAddId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#d11111" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/upgradeClick"
        android:text="click"
        android:layout_below="@+id/upgradeName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:textColor="#d11111" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plusButton"
        android:src="@drawable/plus"
        android:background="@null"
        android:layout_below="@+id/upgradeClick"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zps"
        android:id="@+id/zpsId"
        android:layout_alignBottom="@+id/plusButton"
        android:layout_alignRight="@+id/clickAddId"
        android:layout_alignEnd="@+id/clickAddId"
        android:textColor="#540454"
        android:textStyle="bold"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clickTotal"
        android:id="@+id/clickAddId"
        android:layout_below="@+id/zpsId"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#540454"
        android:textStyle="bold"
        android:textSize="14dp" />
</RelativeLayout>
