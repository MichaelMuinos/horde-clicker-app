<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.justplaingoatapps.clicker.AchievementView"
    android:background="@drawable/purplescratch">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ACHIEVEMENTS"
        android:id="@+id/achTitleId"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/achListViewId"
        android:layout_below="@+id/achTitleId"
        android:dividerHeight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f5f5dc" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/achCloseButtonId"
        android:src="@drawable/close"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/achListViewId"
        android:layout_alignEnd="@+id/achListViewId" />

</RelativeLayout>
