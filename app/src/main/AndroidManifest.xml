<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.justplaingoatapps.hordeclicker"
    android:versionCode="2"
    android:versionName="1.1">

    <supports-screens android:smallScreens="false"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="false"/>

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name="com.justplaingoatapps.clicker.DeleteFile"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.justplaingoatapps.clicker.Start"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.justplaingoatapps.clicker.UpgradeView"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_upgrade_view" >
        </activity>
        <activity
            android:name="com.justplaingoatapps.clicker.StatView"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.justplaingoatapps.clicker.AchievementView"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_achievement_list_view" >
        </activity>
        <activity
            android:name="com.justplaingoatapps.clicker.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.justplaingoatapps.clicker.CreditView"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomeTheme"
            android:label="@string/title_activity_credits" >
        </activity>
        <activity android:name="com.justplaingoatapps.clicker.Reset"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomeTheme">
        </activity>
    </application>

</manifest>
